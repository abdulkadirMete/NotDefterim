<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/ln_sort"
    android:onClick="onClickSort"
    android:background="@color/shadowBlack"
    android:paddingBottom="143dp"
    android:clickable="true"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:background="@drawable/dialog_shape"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/imb_color"
            android:layout_width="@dimen/dimenSort"
            android:layout_height="@dimen/dimenSort"
            android:onClick="onClickSort"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imb_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sort_by_color"></ImageButton>

        <ImageButton
            android:id="@+id/imb_name"
            android:layout_width="@dimen/dimenSort"
            android:layout_height="@dimen/dimenSort"
            android:background="@drawable/ic_sort_item_name_36dp"
            android:onClick="onClickSort"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>

        <ImageButton
            android:id="@+id/imb_date"
            android:layout_width="@dimen/dimenSort"
            android:layout_height="@dimen/dimenSort"
            android:background="@drawable/ic_sort_item_date"
            android:onClick="onClickSort"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imb_name"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>